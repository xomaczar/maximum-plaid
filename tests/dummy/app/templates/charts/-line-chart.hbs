{{#plot-dimension height=200 as |dim|}}
{{#with (area dim.width dim.height margin="10 30 20 30") as |plotArea|}}
  {{#plaid-plot
    (time-scale (extent (map-by "transactionDate" responseTimeMean)) (array 0 plotArea.innerWidth))
    (linear-scale (extent (union (map-by "profit" responseTimeMean) (map-by "revenue" responseTimeMean)) toZero=true) (array plotArea.innerHeight  0))
    plotArea as |plot|}}


    {{#with (pair-by "transactionDate" "profit" responseTimeMean) as |values|}}
      {{plot.line values stroke="#999" strokeWidth="1" curve=(curve "linear")}}

      {{#with (pair-by "transactionDate" "revenue" responseTimeMean) as |revenueValues|}}
        {{plot.line revenueValues stroke="#fff" strokeWidth="2" curve=(curve "linear")}}
      {{/with}}

      {{#plot.bottom-axis
          class="timeline x"
          ticks=(time-interval 'day')
          tickFormat=(fmt-time "%a")
          tickSizeOuter=0
          tickSizeInner=(mult -1 plotArea.innerHeight)}}
      {{/plot.bottom-axis}}
      {{#plot.left-axis class="y" tickFormat=(format-fn "$0.1s") ticks=2 tickSizeOuter=0}}
      {{/plot.left-axis}}
    {{/with}}

  {{/plaid-plot}}
{{/with}}
{{/plot-dimension}}

